# .env.example - Configuration Template for HealthLink
#
# Instructions:
# 1. Copy this file to a new file named .env
# 2. Fill in the actual values for your environment.
# 3. The .env file is ignored by Git and should NOT be committed.

# --- Database (MySQL) ---
# Connection details for your MySQL/MariaDB database
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="root"
DB_PASSWORD=""
DB_NAME="healthlink"

# --- Redis ---
# Connection details for your Redis server
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""

# --- MinIO (S3-compatible Object Storage) ---
# Connection details for your MinIO server
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE="false"
MINIO_DEFAULT_BUCKET="healthlink"

# --- Milvus (Vector Database) ---
# Connection details for your Milvus server
MILVUS_HOST="localhost"
MILVUS_PORT="19530"

# --- LLM API Keys & Models ---
# API endpoint and key for the main chat model (e.g., OpenAI-compatible endpoint)
MODEL_URL="https://dashscope.aliyuncs.com/compatible-mode/v1"
MODEL_KEY="your_llm_api_key"
MODEL_NAME="qwen3-max" # The specific model name to use

# API endpoint and key for the text embedding model
EMBEDDING_MODEL_URL="https://dashscope.aliyuncs.com/api/v1/services/embeddings/multimodal-embedding/multimodal-embedding"
EMBEDDING_MODEL_KEY="your_embedding_model_api_key"
EMBEDDING_MODEL="multimodal-embedding-v1" # The specific embedding model name

# --- JWT (JSON Web Token) Settings ---
# Secret key for signing JWTs. Use a long, random string.
JWT_SECRET_KEY="a_very_long_and_random_secret_key_for_jwt"
JWT_ALGORITHM="HS256"
JWT_LOGIN_SUBJECT="healthLink"

# --- Agent/Chat Settings ---
# Number of recent messages to keep in short-term memory for the agent
TEMP_MEMORY_SIZE="10"